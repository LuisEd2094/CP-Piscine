{
    "version": "0.2.0",
    "configurations": [

        {
            "preLaunchTask": "build",
            "name": "PhoneBook Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ex01/phonebook",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb" // Path to your GDB executable
        }
    ]
}